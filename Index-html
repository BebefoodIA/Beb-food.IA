        function App() {
            const [view, setView] = useState('welcome'); // welcome, login, signup, app
            const [user, setUser] = useState(null);
            const [formData, setFormData] = useState({ email: '', password: '', name: '' });
            const [error, setError] = useState('');

            // Simula√ß√£o de carregamento de sess√£o
            useEffect(() => {
                const savedUser = localStorage.getItem('bebefood_user');
                if (savedUser) {
                    setUser(JSON.parse(savedUser));
                    setView('app');
                }
            }, []);

            const handleAuth = (e) => {
                e.preventDefault();
                setError('');

                if (!formData.email || !formData.password) {
                    setError('Por favor, preencha todos os campos.');
                    return;
                }

                if (view === 'signup' && !formData.name) {
                    setError('Por favor, informe seu nome.');
                    return;
                }

                // Simula√ß√£o de sucesso
                const userData = { 
                    name: formData.name || formData.email.split('@')[0], 
                    email: formData.email 
                };
                
                localStorage.setItem('bebefood_user', JSON.stringify(userData));
                setUser(userData);
                setView('app');
            };

            const logout = () => {
                localStorage.removeItem('bebefood_user');
                setUser(null);
                setView('welcome');
            };

            // --- TELAS DE AUTENTICA√á√ÉO ---
            if (view === 'welcome') {
                return (
                    <div className="min-h-screen flex flex-col items-center justify-center p-6 text-center">
                        <div className="w-24 h-24 bg-white rounded-3xl shadow-xl flex items-center justify-center mb-6 animate-bounce">
                            <span className="text-4xl">üë∂</span>
                        </div>
                        <h1 className="text-4xl font-extrabold text-emerald-800 mb-2">Beb√©Food IA</h1>
                        <p className="text-emerald-600 mb-10 max-w-xs">A nutri√ß√£o do seu beb√© guiada por intelig√™ncia artificial.</p>
                        <div className="w-full max-w-xs space-y-4">
                            <button onClick={() => setView('login')} className="w-full bg-emerald-500 text-white py-4 rounded-2xl font-bold shadow-lg hover:bg-emerald-600 transition-all">Entrar</button>
                            <button onClick={() => setView('signup')} className="w-full bg-white text-emerald-500 py-4 rounded-2xl font-bold border border-emerald-100 hover:bg-emerald-50 transition-all">Criar conta</button>
                        </div>
                    </div>
                );
            }

            if (view === 'login' || view === 'signup') {
                return (
                    <div className="min-h-screen flex items-center justify-center p-6">
                        <div className="bg-white p-8 rounded-[2.5rem] shadow-2xl w-full max-w-md border border-white">
                            <button onClick={() => setView('welcome')} className="text-gray-400 mb-6 flex items-center text-sm font-medium">
                                ‚Üê Voltar
                            </button>
                            <h2 className="text-2xl font-bold text-gray-800 mb-2">
                                {view === 'login' ? 'Bem-vinda de volta!' : 'Come√ßar jornada'}
                            </h2>
                            <p className="text-gray-500 mb-8 text-sm">
                                {view === 'login' ? 'Acesse sua conta para ver o card√°pio.' : 'Crie sua conta para receber dicas da Jeey IA.'}
                            </p>

                            <form onSubmit={handleAuth} className="space-y-4">
                                {view === 'signup' && (
                                    <input 
                                        type="text" 
                                        placeholder="Seu nome" 
                                        className="w-full p-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-2 focus:ring-emerald-500/20 transition-all"
                                        onChange={(e) => setFormData({...formData, name: e.target.value})}
                                    />
                                )}
                                <input 
                                    type="email" 
                                    placeholder="E-mail" 
                                    className="w-full p-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-2 focus:ring-emerald-500/20 transition-all"
                                    onChange={(e) => setFormData({...formData, email: e.target.value})}
                                />
                                <input 
                                    type="password" 
                                    placeholder="Senha" 
                                    className="w-full p-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-2 focus:ring-emerald-500/20 transition-all"
                                    onChange={(e) => setFormData({...formData, password: e.target.value})}
                                />
                                
                                {error && <p className="text-red-500 text-xs font-medium px-1">{error}</p>}

                                <button type="submit" className="w-full bg-emerald-500 text-white py-4 rounded-2xl font-bold shadow-lg mt-4 shadow-emerald-100">
                                    {view === 'login' ? 'Entrar' : 'Cadastrar'}
                                </button>
                            </form>

                            <p className="text-center mt-8 text-sm text-gray-500">
                                {view === 'login' ? 'N√£o tem uma conta?' : 'J√° possui conta?'}
                                <button 
                                    onClick={() => setView(view === 'login' ? 'signup' : 'login')}
                                    className="ml-1 text-emerald-600 font-bold"
                                >
                                    {view === 'login' ? 'Criar agora' : 'Fazer login'}
                                </button>
                            </p>
                        </div>
                    </div>
                );
            }

            // --- INTERFACE DO APP ---
            return (
                <div className="max-w-md mx-auto bg-white min-h-screen relative flex flex-col shadow-2xl">
                    <header className="p-6 border-b flex justify-between items-center bg-white sticky top-0 z-10">
                        <div>
                            <h2 className="font-bold text-lg text-gray-800 tracking-tight">Ol√°, {user?.name}! üëã</h2>
                            <p className="text-[10px] font-bold text-emerald-500 uppercase tracking-widest">Introdu√ß√£o Alimentar</p>
                        </div>
                        <button onClick={logout} className="p-2 bg-gray-50 rounded-full text-gray-400 hover:text-red-500 transition-colors">
                            üö™
                        </button>
                    </header>

                    <main className="flex-1 p-6 space-y-6">
                        <div className="bg-gradient-to-br from-emerald-500 to-teal-600 p-6 rounded-[2.5rem] text-white shadow-xl">
                            <h3 className="font-bold text-xl mb-1">Dica da Jeey IA üí°</h3>
                            <p className="text-sm opacity-90 leading-relaxed">
                                Beb√™s de 6 meses amam texturas macias. Comece com pur√™ de ab√≥bora bem lisinho e sem sal!
                            </p>
                        </div>

                        <div className="grid grid-cols-2 gap-4">
                            <div className="aspect-square bg-orange-50 rounded-3xl p-5 border border-orange-100 flex flex-col justify-between">
                                <span className="text-2xl">üìÖ</span>
                                <p className="font-bold text-sm text-orange-800">Card√°pio da Semana</p>
                            </div>
                            <div className="aspect-square bg-blue-50 rounded-3xl p-5 border border-blue-100 flex flex-col justify-between">
                                <span className="text-2xl">üçé</span>
                                <p className="font-bold text-sm text-blue-800">Receitas R√°pidas</p>
                            </div>
                        </div>
                    </main>

                    <nav className="p-6 bg-white border-t flex justify-around items-center">
                        <div className="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-600">üè†</div>
                        <div className="w-12 h-12 text-gray-300 flex items-center justify-center">üîç</div>
                        <div className="w-12 h-12 text-gray-300 flex items-center justify-center">üí¨</div>
                        <div className="w-12 h-12 text-gray-300 flex items-center justify-center">üë§</div>
                    </nav>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
